<Window x:Class="EmailSave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailSave"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Введите Email"/>
            <TextBox x:Name="tbMail" Margin="5"/>
            <Label Content="Введите Имя"/>
            <TextBox x:Name="tbName" Margin="5"/>
            
            <Button Margin="5" x:Name="btAdd"  Content="Добавить" Click="btAdd_Click"/>
            <Button Margin="5" x:Name="btClear"  Content="Очистить" Click="btClear_Click"/>
            <DataGrid Margin="5" Padding="5" MinHeight="200" x:Name="dgEmail"></DataGrid>
        </StackPanel>
    </Grid>
</Window>
